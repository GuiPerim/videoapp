{% extends 'base.html.twig' %}

{% block title %}Business Finder Admin!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Business Finder Admin</h1>
        <a href="{{ path('admin/list') }}" class="btn btn-sm btn-primary">Back</a>
        <br>
        <br>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message|raw }}
                </div><br/>
            {% endfor %}
        {% endfor %}

        <form method="post" action="{{ path('add_business') }}">

            <div class="form-row">
                <div class="form-group col-xs-12 col-md-6">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Business Title">
                </div>
                <div class="form-group col-xs-12 col-md-6">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone" name="phone" placeholder="Business Phone">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-xs-12 col-md-6">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="address" placeholder="Business Address">
                </div>
                <div class="form-group col-xs-12 col-md-6">
                    <label for="zipcode">Zipcode</label>
                    <input type="text" class="form-control" id="zipcode" name="zipcode" placeholder="Business Address Zipcode">
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-xs-12 col-md-6">
                    <label for="state">State</label>
                    <input type="text" class="form-control" id="state" name="state" placeholder="State">
                </div>
                <div class="form-group col-xs-12 col-md-6">
                    <label for="city">City</label>
                    <input type="text" class="form-control" id="city" name="city" placeholder="City">
                </div>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" name="description"></textarea>
            </div>

            <div class="form-group">
                <label for="category">Category</label><small> (You can pick more than one)</small>
                <select multiple name="category[]" id="category" class="form-control" size="10">
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <button type="submit" class="btn btn-success">Save</button>
        </form>
    </div>
{% endblock %}
