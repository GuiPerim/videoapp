{% extends 'base.html.twig' %}

{% block title %}Business Finder{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper" style="margin-top: 5em;">
    <h1 class="text-center">Business Finder!</h1><br>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                {{ message|raw }}
            </div><br/>
        {% endfor %}
    {% endfor %}

    <form method="post" action="{{ path('search_business') }}">
        <div class="form-row">
            <div class="form-group col-xs-12 col-md-12">
                <input type="text" class="form-control" id="search" name="search" placeholder="What are you looking for?">
            </div>
            <div class="col text-center">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>

</div>
{% endblock %}
